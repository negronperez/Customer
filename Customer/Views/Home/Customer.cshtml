
@{
    ViewBag.Title = "Customer";
    //Layout = "~/Views/Shared/MasterPage.cshtml";
}

@model Customer.Entity.Customer

<form action="/Home/Customer" method="post">
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>First Name</label>
                    @Html.TextBoxFor(m => Model.FirstName, new { @class = "form-control validate" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Middle Name</label>
                    @Html.TextBoxFor(m => Model.MiddleName, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Last Name</label>
                    @Html.TextBoxFor(m => Model.LastName, new { @class = "form-control validate" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Last Name 2</label>
                    @Html.TextBoxFor(m => Model.LastName2, new { @class = "form-control validate" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>Birthday</label>
                    @Html.TextBoxFor(m => Model.Birthday, new { @class = "form-control validate" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Phone</label>
                    @Html.TextBoxFor(m => Model.Phone, new { @class = "form-control validate" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Cell Phone</label>
                    @Html.TextBoxFor(m => Model.CelPhone, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Email</label>
                    @Html.TextBoxFor(m => Model.Email, new { @class = "form-control validate" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-default">Save</button>
            </div>
        </div>
    </div>
</form>


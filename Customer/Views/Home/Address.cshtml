@model Customer.Entity.CustomerAddress

<form action="/Home/Address" method="post">
    @Html.HiddenFor(m => m.CustomerId)
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <div class="form-group">
                    <label>Address 1</label>
                    @Html.TextBoxFor(m => Model.Address1, new { @class = "form-control validate" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>Address 2</label>
                    @Html.TextBoxFor(m => Model.Address2, new { @class = "form-control" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>ZipCode</label>
                    @Html.TextBoxFor(m => Model.ZipCode, new { @class = "form-control validate" })
                </div>
            </div>
            <div class="col-md-3">
                <div class="form-group">
                    <label>City</label>
                    @Html.DropDownListFor(m => Model.City, item, new { @class = "form-control validate" })
                </div>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12 text-right">
                <button type="submit" class="btn btn-default">Safe</button>
            </div>
        </div>
    </div>
</form>

